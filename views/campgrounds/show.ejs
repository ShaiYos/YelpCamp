<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= c.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= c.title %></h5>
              <p class="card-text"><%= c.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= c.location %></li>
              <li class="list-group-item text-muted">Price: <%= c.price %>$ per night</li>
            </ul>
            <div class="card-body">
              <a class="card-link btn btn-primary"href="/campgrounds/<%= c._id %>/edit" class="card-link">Edit</a>
              <form class="d-inline" action="/campgrounds/<%=c._id %>?_method=DELETE" method="POST" >
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
    <div class="col-6">
      <h5>Leave A Review</h5>
      <form class="mb-3 validated-form" action="/campgrounds/<%=c._id %>/reviews" method="POST" novalidate> 
        <label class="form-label" for="rating" >Rating</label>
        <input class="form-range" type="range" min="0" max="5" name="review[rating]" id="rating" >
        <div class="mb-3">
          <label for="body" class="form-label">Add a review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <h5>Reviews:</h5>
      <% for(let rev of c.reviews) { %>
        <div class="mb-3 card">
          <div class="card-body">
            <h5 class="card-title">rating: <%= rev.rating %></h5>
            <p class="card-text">review: <%=rev.body %></p>
            <form action="/campgrounds/<%=c._id%>/reviews/<%=rev._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete Review</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
</div>